<!--pages/view/view.wxml-->
<!-- 基本使用 ：块元素-->
<view>哈哈哈哈哈</view>
<view>呵呵呵呵呵</view>

<!-- 1.hover-class:指定按下去的样式类 
2.hover-stay-time:手指松开后点击态保留时间，单位毫秒。默认400-->
<view class="box1" hover-class="box1-view" hover-stay-time="0">box1</view>

<!--3.hover-start-time 按下多久出现点击态,默认50 -->
<view class="box2" hover-start-time="500" hover-class="box2-view" hover-stay-time="0">box1</view>

<!-- 4.hover-stop-propagation:指定是否阻止本节点的祖先节点出现点击态 -->
<view class="box3" hover-class="box3-view">
  <view class="box1" 
    hover-class="box1-view" 
    hover-stay-time="0"
    hover-stop-propagation>
    box1
  </view>
</view>
